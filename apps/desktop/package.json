{
  "name": "@novella/desktop",
  "version": "1.0.0",
  "description": "Desktop application for Novella e-book reader",
  "private": true,
  "main": "dist/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:main\"",
    "dev:main": "tsc -p tsconfig.main.json && electron .",
    "dev:renderer": "next dev",
    "build": "npm run build:renderer && npm run build:main",
    "build:renderer": "next build",
    "build:main": "tsc -p tsconfig.main.json",
    "start": "electron .",
    "dist": "electron-builder",
    "lint": "eslint .",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist .next"
  },
  "dependencies": {
    "electron": "^27.0.0",
    "next": "^14.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "@supabase/supabase-js": "^2.38.0",
    "@tanstack/react-query": "^5.8.0",
    "zustand": "^4.4.0",
    "react-hook-form": "^7.48.0",
    "zod": "^3.22.4",
    "@hookform/resolvers": "^3.3.0",
    "tailwindcss": "^3.3.0",
    "autoprefixer": "^10.4.0",
    "postcss": "^8.4.0",
    "lucide-react": "^0.294.0",
    "date-fns": "^2.30.0",
    "@novella/shared": "*",
    "@novella/ui": "*",
    "@novella/epub-reader": "*"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "typescript": "^5.3.0",
    "eslint": "^8.55.0",
    "eslint-config-next": "^14.0.0",
    "concurrently": "^8.2.0",
    "electron-builder": "^24.6.0",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.novella.app",
    "productName": "Novella",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
} 